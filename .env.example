# Canvas server binding (default: 127.0.0.1 - localhost only)
CANVAS_HOST=127.0.0.1
CANVAS_PORT=3000

# API key for authentication (auto-generated if not set, minimum 32 chars)
# Generate one with: node scripts/generate-api-key.cjs
# EXCALIDRAW_API_KEY=your-secret-key-here

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Persistence (default: disabled, in-memory only)
PERSISTENCE_ENABLED=false
PERSISTENCE_DIR=./data

# Canvas server URL (used by MCP server to reach canvas)
CANVAS_SERVER_URL=http://127.0.0.1:3000

# Logging
LOG_LEVEL=info
AUDIT_LOG_ENABLED=true

# Element limits
MAX_ELEMENTS=10000
MAX_BATCH_SIZE=100
